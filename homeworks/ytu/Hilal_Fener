def sifrele(mesaj):
    """
    Verilen mesajı şifreler.
    - Harfleri alfabede 5 harf ileri kaydırır.
    - Sayıları ters çevirir.
    - Boşluk ve özel karakterleri korur.
    """
    sonuc = ""
    sayac = ""
    for karakter in mesaj:
        if karakter.isalpha():  # Harf kontrolü
            base = ord('A') if karakter.isupper() else ord('a')
            sonuc += chr((ord(karakter) - base + 5) % 26 + base)
        elif karakter.isdigit():  # Sayı kontrolü
            sayac += karakter
        else:  # Özel karakterler
            if sayac:
                sonuc += sayac[::-1]  # Sayıları ters çevir ve ekle
                nsayac = ""
            sonuc += karakter
    if sayac:
        sonuc += sayac[::-1]  # Son kalan sayıları ters çevir ve ekle
    return sonuc

def sifreCoz(mesaj):
    """
    Verilen şifreli mesajı çözer.
    - Harfleri alfabede 5 harf geri kaydırır.
    - Sayıları tekrar ters çevirerek orijinal haline getirir.
    - Boşluk ve özel karakterleri korur.
    """
    sonuc = ""
    sayac = ""
    for karakter in mesaj:
        if karakter.isalpha():  # Harf kontrolü
            base = ord('A') if karakter.isupper() else ord('a')
            sonuc += chr((ord(karakter) - base - 5) % 26 + base)
        elif karakter.isdigit():  # Sayı kontrolü
            sayac += karakter
        else:  # Özel karakterler
            if sayac:
                sonuc += sayac[::-1]  # Sayıları ters çevir ve ekle
                sayac = ""
            sonuc += karakter
    if sayac:
        sonuc += sayac[::-1]  # Son kalan sayıları ters çevir ve ekle
    return sonuc



sifreli_mesaj = sifrele(kendi_mesaj)  # Mesajı şifrele
cozulmus_mesaj = sifreCoz(sifreli_mesaj)  # Şifreli mesajı çöz

# Sonuçları ekrana yazdır
print("Test Mesajının Çözümü:", sifreCoz("ymj vznhp gwtbs ktc ozrux tajw ymj qfed itl"))

# Kullanıcıdan mesaj al
kendi_mesaj = input("Şifrelenecek mesajı girin: ")

print("Girdiğiniz Mesaj: ", cozulmus_mesaj)
print("Mesajın Çözümü",sifreCoz(kendi_mesaj))
print("Şifrelenmiş Mesaj: ", sifreli_mesaj)
